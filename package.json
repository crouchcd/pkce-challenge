{
  "name": "pkce-challenge",
  "version": "3.0.0",
  "description": "Generate or verify a Proof Key for Code Exchange (PKCE) challenge pair",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/module.js",
      "require": "./dist/index.js"
    }
  },
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/module.js",
  "types": "dist/index.d.ts",
  "targets": {
    "main": false,
    "default": {
      "isLibrary": true,
      "includeNodeModules": false,
      "outputFormat": "commonjs"
    },
    "module": {
      "outputFormat": "esmodule"
    }
  },
  "files": [
    "src/",
    "dist/"
  ],
  "scripts": {
    "watch": "parcel watch",
    "build": "parcel build --no-source-maps",
    "test": "tap tests/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crouchcd/pkce-challenge.git"
  },
  "keywords": [
    "PKCE",
    "oauth2"
  ],
  "author": "crouchcd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crouchcd/pkce-challenge/issues"
  },
  "homepage": "https://github.com/crouchcd/pkce-challenge#readme",
  "dependencies": {
    "crypto-js": "^4.1.1"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.7.0",
    "@parcel/transformer-typescript-types": "^2.7.0",
    "@types/crypto-js": "^4.1.1",
    "@types/node": "^12.20.47",
    "parcel": "^2.7.0",
    "tap": "^16.0.1",
    "typescript": "^4.8.2"
  }
}
